<h1>All Contacts</h1>

<% @contacts.each do |contact| %>
<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Contact</h3>
  </div>
  <div class="panel-body">
    <dl>
      <dt>Name:</dt>
      <dd><%= contact.name %></dd>
      <dt>Email:</dt>
      <dd><%= contact.email %></dd>
      <dt>Phone Number:</dt>
      <dd><%= contact.phone_number %></dd>
      <dt><%= link_to 'See Contact', contact_path(contact.id), class: 'btn btn-success' %></dt>
    </dl>
  </div>
</div>
<% end %>
<%= link_to 'New Contact', new_contact_path, class: 'btn btn-warning' %>
